	height="100%">
	<f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<vm:VariantManagement standardItemText="Default"/>
				</f:heading>
				<f:actions>
					<ToolbarSpacer/>
					<!--<Button text="Global Action" type="Transparent"/>-->
					<!--<Button text="Toggle Footer" type="Transparent" press="onToggleFooter"/>-->
					<Button icon="sap-icon://action" type="Transparent"/>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Header -->
		<f:header>
			<f:DynamicPageHeader pinnable="true">
				<f:content>
					<fb:FilterBar id="filterbar" reset="onReset" search="onSearch" useToolbar="false" showGoOnFB="true">
						<fb:filterItems>
							<fb:FilterItem name="G">
								<fb:control>
									<SearchField placeholder="Search"/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="A" label="Zone">
								<fb:control>
									<ComboBox id="zoneFilter" change="onSelectChange" items="{ path: 'vehicles>/FilterData/Zone' }" placeholder="Select Zone">
										<core:Item key="{vehicles>key}" text="{vehicles>name}"/>
									</ComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="B" label="Series">
								<fb:control>
									<ComboBox id="seriesFilter" change="onSelectChange" items="{/zc_mmfields}" placeholder="Select Series">
										<core:Item key="{ModelSeriesNo}" text="{TCIModelDescriptionEN}"/>
									</ComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="C" label="Model">
								<fb:control>
<!--									<ComboBox id="modelFilter" change="onSelectChange" items="{/zc_model}">
										<core:Item key="{Model}" text="{ModelDescriptionEN}"/>
									</ComboBox>-->
									<Input
										id="modelFilter"
										type="Text"
										textFormatMode="KeyValue"
										placeholder="Enter Model ..."
										showSuggestion="true"
										showValueHelp="true"
										valueHelpRequest="handleModelValueHelp"
										suggestionItems="{/zc_model}"
										suggestionItemSelected="suggestionItemSelected">
										<suggestionItems>
											<core:ListItem key="{Model}" text="{ModelDescriptionEN}" />
										</suggestionItems>
									</Input>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="D" label="Year">
								<fb:control>
									<ComboBox id="yearFilter" change="onSelectChange" items="{YearModel>/}" placeholder="Select Year">
										<core:Item key="{YearModel>dkey}" text="{YearModel>dtext}"/>
									</ComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="E" label="Reservation Status">
								<fb:control>
									<ComboBox id="resStatusFilter" change="onSelectChange" items="{ path: 'vehicles>/FilterData/ReservationStatus' }" placeholder="Select Status">
										<core:Item key="{vehicles>key}" text="{vehicles>name}"/>
									</ComboBox>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="F" label="Vin">
								<fb:control>
									<Input id="vinFilter" placeholder="Enter VIN ..."/>
								</fb:control>
							</fb:FilterItem>
						</fb:filterItems>
					</fb:FilterBar>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
